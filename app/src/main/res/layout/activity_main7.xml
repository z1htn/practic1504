<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    layout_height="wrap_content"
    layout_width="wrap_content"
    android:gravity="left"
    android:orientation="vertical"
    tools:context=".MainActivity7">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_marginRight="100dp"
            android:textSize="20dp"
            android:text="Создание карты \nпациента " />

        <TextView
            android:id="@+id/textView18"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="50dp"
            android:textColor="#1A6FEE"
            android:textSize="15dp"
            android:onClick=""
            android:text="Пропустить" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="8dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/textView15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Без карты пациента вы не сможете заказать\nанализы" />

        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/textView17"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="В картах пациентов будут храниться результата \nанализов вас и ваших бликих" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText
            android:id="@+id/editTextTextPersonName5"
            android:layout_width="375dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:ems="10"
            app:cornerRadius = "10dp"
            android:background="#EBEBEB"
            android:inputType="textPersonName"
            android:hint="Имя" />

        <EditText
            android:layout_marginTop="10dp"
            android:id="@+id/editTextTextPersonName6"
            android:layout_width="375dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:ems="10"
            app:cornerRadius = "10dp"
            android:hint="Отчество"
            android:background="#EBEBEB"
            android:inputType="textPersonName" />

        <EditText
            android:layout_marginTop="10dp"
            android:id="@+id/editTextTextPersonName7"
            android:layout_width="375dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:ems="10"
            android:hint="Фамилия"
            app:cornerRadius = "10dp"
            android:background="#EBEBEB"
            android:inputType="textPersonName"
            />

        <EditText
            android:layout_marginTop="10dp"
            android:id="@+id/editTextTextPersonName8"
            android:layout_width="375dp"
            android:layout_height="40dp"
            android:ems="10"
            app:cornerRadius = "10dp"
            android:layout_gravity="center"
            android:hint="Дата рождения"
            android:background="#EBEBEB"
            android:inputType="date" />

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="375dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="#EBEBEB"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <Button
            android:id="@+id/button"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_width="375dp"
            android:backgroundTint="@color/knopka"
            android:textColor="@color/white"
            app:cornerRadius = "10dp"
            android:layout_height="50dp"
            android:enabled="false"
            android:onClick="onClick7"
            android:text="Создать" />
    </LinearLayout>

</androidx.appcompat.widget.LinearLayoutCompat>