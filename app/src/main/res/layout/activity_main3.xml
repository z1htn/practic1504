<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    layout_height="wrap_content"
    layout_width="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".MainActivity2">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="start"
        android:paddingTop="49dp">

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#FFFFFF"
            android:textColor="#57A9FF"
            android:layout_marginLeft="30dp"
            android:onClick="onClick"
            android:text="Завершить" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="167.04dp"
            android:layout_height="163.11dp"
            android:layout_marginLeft="135dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/shape" />

    </LinearLayout>

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Мониторинг"
        android:textSize="20dp"
        android:layout_marginTop="50dp"
        android:textColor="#00B712"
        tools:layout_editor_absoluteX="139dp"
        tools:layout_editor_absoluteY="273dp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Наши врачи наблюдают\n за вашими показателями здоровья"
        android:layout_marginTop="15dp"/>

    <ImageView
        android:layout_marginTop="40dp"
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/grouup" />

    <ImageView
        android:layout_marginTop="40dp"
        android:id="@+id/imageView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/end" />

</androidx.appcompat.widget.LinearLayoutCompat>